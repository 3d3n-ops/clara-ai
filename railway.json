{
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "backend/Dockerfile"
  },
  "deploy": {
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "startCommand": "cd backend && uvicorn backend_server:app --host 0.0.0.0 --port $PORT",
    "numReplicas": 1
  },
  "environments": {
    "production": {
      "variables": {
        "LOG_LEVEL": "info",
        "ENVIRONMENT": "production"
      }
    },
    "development": {
      "variables": {
        "LOG_LEVEL": "debug",
        "ENVIRONMENT": "development"
      }
    }
  }
}
