{
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "backend/Dockerfile"
  },
  "deploy": {
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "numReplicas": 1
  },
  "environments": {
    "production": {
      "variables": {
        "LOG_LEVEL": "info"
      }
    },
    "development": {
      "variables": {
        "LOG_LEVEL": "debug"
      }
    }
  }
}
